{{ form_start(form) }}
{#
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
#}
    <div class="row">
        <div class="col-6">
            {{ form_row(form.username) }}
        </div>
        <div class="col-6">
            {{ form_row(form.dni) }}
        </div>
    </div>   
    <div class="row">
        <div class="col-6">
            {{ form_row(form.colegio) }}
        </div>
        <div class="col-6">
            {{ form_row(form.circunscripcion) }}
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {{ form_row(form.apellido) }}
        </div>
        <div class="col-6">
            {{ form_row(form.nombre) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{ form_row(form.roles) }}
        </div>
    </div>

    <hr>
    <button type="button" class="btn btn-secondary float-start" data-bs-dismiss="modal">Cancelar</button>

    <button id="btnSave" class="btn btn-primary float-end shadow">{{ button_label|default('Grabar Cambios') }}</button>
{{ form_end(form) }}
